            @Html.DropDownList("SelectedThemeIds", Model.ThemeList, new { multiple = "multiple" })
            @Html.ValidationMessageFor(model => model.SelectedThemeIds, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DrinkAbv, htmlAttributes: new { @class = "control-label col-sm-6" })
