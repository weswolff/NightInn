        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-6">
            <input type="submit" value="Create" class="btn btn-info" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info btn-large" })
        </div>
    </div>
</div>
}
