@model NightInnV2.Models.Theme

@{
    ViewBag.Title = "Edit";
}

<h2 class="page-header">Make changes to @Html.DisplayFor(model => model.ThemeName)</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ThemeId)

        <div class="form-group">
            @Html.LabelFor(model => model.ThemeName, htmlAttributes: new { @class = "control-label col-sm-6" })
            <div class="col-sm-6">
                @Html.EditorFor(model => model.ThemeName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ThemeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-6 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info btn-large" })
            </div>
        </div>
    </div>
}
